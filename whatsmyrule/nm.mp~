beginfig(1)
  u=1cm;
  o=0.4u;
  path p;
  z0=(-2u,0);
  z1=z0 shifted (0,0.5u);
  z2=z1 shifted (u-0.5o,0);
  z3=z2 shifted ((u,0) rotated 135);
  z4=z3 shifted (1.414u+o,0);
  z5=z2 shifted (o,0);
  z6=z1 shifted (4u,0);
  z7=z1 shifted (4u,0);
  p0=z0--z1--z2--z3--z4--z5--z6--z7--cycle;
  p1=p0 rotated 180;
  fill p0 withcolor green;
  fill p1 withcolor green;
  draw p0;
  draw p1;
endfig;
end;
